{{> header}}

<section class="section">
    <h2>Summary</h2>
    <p>{{summary}}</p>
</section>

<section class="section">
    <h2>Skills</h2>
    <div class="skills-grid">
        {{#each skills}}
            {{> skill this}}
        {{/each}}
    </div>
</section>

{{#if experience.length}}
<section class="section">
    <h2>Experience</h2>
    {{#each experience}}
        {{> experience this}}
    {{/each}}
</section>
{{/if}}

{{#if education.length}}
<section class="section">
    <h2>Education</h2>
    {{#each education}}
        {{> education this}}
    {{/each}}
</section>
{{/if}}

{{#if languages.length}}
<section class="section">
    <h2>Languages</h2>
    <div class="languages-list">
        {{#each languages}}
            {{> language this}}
        {{/each}}
    </div>
</section>
{{/if}}

{{> footer}}